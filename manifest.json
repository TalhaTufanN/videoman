{
  "manifest_version": 3,
  "name": "VideoMan",
  "version": "1.0",
  "description": "Sosyal medya video kontrolcüsü ve indirici.",
  "permissions": ["downloads"],
  "host_permissions": ["https://*.instagram.com/*"],
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VideoMan - Video Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": [
        "content/icons.js",
        "content/utils.js",
        "content.js"
      ],
      "css": ["style.css"]
    }
  ]
}